datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  passwordHash  String
  name  String
  birth DateTime
  createdAt String

  Token Token[]
}

model Token {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  user  User  @relation(fields: [userEmail], references: [id])
  userEmail String
  blocked Boolean @default(false)
}