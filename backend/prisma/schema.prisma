datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  passwordHash  String
  name  String
  birth DateTime
  createdAt String
  rooms Room[]
}

model Room {
  id  String @id  @default(auto())  @map("_id") @db.ObjectId
  title String
  content String
  key Int
  isLocked  Boolean
  createdAt DateTime
  user  User  @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}